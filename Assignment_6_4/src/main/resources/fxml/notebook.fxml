<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.NoteController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Section: Title and Instructions -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Notebook application" textFill="white">
                <font>
                    <Font name="Arial Bold" size="24.0"/>
                </font>
            </Label>
            <Label text="Create, view, edit, and manage your notes" textFill="#ecf0f1">
                <font>
                    <Font name="Arial" size="14.0"/>
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Center Section: Note Input and List -->
    <center>
        <HBox spacing="15" style="-fx-padding: 20;">

            <!-- Left Side: Input Fields -->
            <VBox spacing="15" prefWidth="400" HBox.hgrow="ALWAYS">
                <Label text="Note Title:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TextField fx:id="titleField" promptText="Enter note title..."
                           style="-fx-font-size: 13px; -fx-padding: 10;"/>

                <Label text="Note Content:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TextArea fx:id="contentArea" promptText="Write your note here..."
                          wrapText="true" prefHeight="250"
                          style="-fx-font-size: 13px; -fx-padding: 10;"/>

                <!-- Buttons -->
                <HBox spacing="10">
                    <Button fx:id="addButton" text="Add Note" onAction="#handleAddNote"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 10 20;"
                            HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                    <Button fx:id="editButton" text="Update Note" onAction="#handleEditNote"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 10 20;"
                            HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                </HBox>

                <HBox spacing="10">
                    <Button fx:id="deleteButton" text="Delete Note" onAction="#handleDeleteNote"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 10 20;"
                            HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                    <Button text="Clear" onAction="#handleClearFields"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 10 20;"
                            HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                </HBox>
            </VBox>

            <!-- Right Side: Notes List -->
            <VBox spacing="10" prefWidth="350" HBox.hgrow="ALWAYS">
                <Label text="Your Notes:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <ListView fx:id="notesListView" VBox.vgrow="ALWAYS"
                          style="-fx-font-size: 13px;"/>
                <Label text="Click a note to view/edit" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
            </VBox>

        </HBox>
    </center>

</BorderPane>